<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoStoreActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reviewRegTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_rounded"
        android:elevation="15dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/isRunningSwitch">

        <ImageView
            android:id="@+id/regReviewFinBtn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/leftarrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="가게 정보"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Switch
        android:id="@+id/isRunningSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="운영 여부"
        android:textOff="영업종료"
        android:textOn="영업중"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewRegTitleLayout" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isRunningSwitch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/etStroeName"
            app:layout_constraintEnd_toEndOf="@+id/etStroeName"
            app:layout_constraintStart_toEndOf="@+id/etStroeName"
            app:layout_constraintTop_toTopOf="@+id/etStroeName">

            <TextView
                android:id="@+id/StoreRocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="가게 주소"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/storeLocationTv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_background"
                android:gravity="center|left"
                android:hint="가게 주소를 선택하세요."
                android:paddingLeft="10dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StoreRocation" />

            <TextView
                android:id="@+id/payWayTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="결제방식"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/storeLocationTv" />

            <CheckBox
                android:id="@+id/checkCash"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiobutton_background_selector"
                android:button="@android:color/transparent"
                android:text="현금"
                android:textAlignment="center"
                android:textColor="@drawable/radiobutton_textcolor_selector"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payWayTv" />

            <CheckBox
                android:id="@+id/checkCreditCard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiobutton_background_selector"
                android:button="@android:color/transparent"
                android:text="카드"
                android:textAlignment="center"
                android:textColor="@drawable/radiobutton_textcolor_selector"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/checkCash"
                app:layout_constraintTop_toBottomOf="@+id/payWayTv" />

            <CheckBox
                android:id="@+id/checkAccountTransfer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiobutton_background_selector"
                android:button="@android:color/transparent"
                android:text="계좌"
                android:textAlignment="center"
                android:textColor="@drawable/radiobutton_textcolor_selector"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/checkCreditCard"
                app:layout_constraintTop_toBottomOf="@+id/payWayTv" />

            <TextView
                android:id="@+id/runningDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="출몰요일"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkCash" />

            <LinearLayout
                android:id="@+id/dateCheckLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/runningDay">

                <CheckBox
                    android:id="@+id/checkMon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="월"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/checkTue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="화"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/checkWed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="수"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/checkThu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="목"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/checkFri"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="금"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/checkSat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="토"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/checkSun"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:button="@android:color/transparent"
                    android:text="일"
                    android:textAlignment="center"
                    android:textColor="@drawable/radiobutton_textcolor_selector"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRunTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="영업 시간"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateCheckLayout" />

            <LinearLayout
                android:id="@+id/etRunTimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRunTime">

                <EditText
                    android:id="@+id/openTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_background"
                    android:ems="2"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColor="#000000"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="To"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/offTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_background"
                    android:ems="2"
                    android:gravity="center"
                    android:hint="24"
                    android:inputType="number"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etRunTimeLayout">

                <TextView
                    android:id="@+id/categoryAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="카테고리"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoryTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Category" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="메뉴"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/reviewRegBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>